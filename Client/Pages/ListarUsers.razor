@page "/Listarsuarios"
<h3>ListarUsers</h3>
<div class="container mb-3">
    <!-- Botón para ir a la ruta Usuarios -->
    <a class="btn btn-primary" href="/Usuarios">Agrega un Usuario</a>
</div>

@if (ViewModel.Users != null)
{
    <div class="container">
        <table class="table table-striped table-bordered table-hover">
        <thead class="thead-dark">
            <tr>
                <th>IdUsuario</th>
                <th>Nombres</th>
                <th>Apellidos</th>
                <th>Cedula</th>
                <th>Telefono</th>
                <th>Correo</th>
                <th>Clave</th>
                <th>Rol</th>
                <th>FechaCreacion</th>
                <th>Estado</th>
                <th>Estudios</th>
                <th>Edad</th>
                <th>Idiomas</th>
                <th>Experiencia</th>
                <th>Habilidades</th>
                    <th>Acciones</th>
            </tr>
        </thead>
        @foreach (var item in ViewModel.Users)
        {
            <tr>
                <td>@item.IdUsuario</td>
                <td>@item.Nombres</td>
                <td>@item.Apellidos</td>
                <td>@item.Cedula</td>
                <td>@item.Telefono</td>
                <td>@item.Correo</td>
                <td>@item.Clave</td>
                <td>@item.Rol</td>
                <td>@item.FechaCreacion</td>
                <td>@item.Estado</td>
                <td>@item.Estudios</td>
                <td>@item.Edad</td>
                <td>@item.Idiomas</td>
                <td>@item.Experiencia</td>
                <td>@item.Habilidades</td>
                    <td>
                        <!-- Botones de acción sin funcionalidad definida -->
                        <a class="btn btn-warning btn-sm" href="@($"/ActualizarUsuario/{item.IdUsuario}")">Editar</a>


                        <button class="btn btn-danger btn-sm" @onclick="() => DeactivateUser(item.IdUsuario)"> Eliminar</button>
                    </td>
            </tr>
        }
    </table>
    </div>
}